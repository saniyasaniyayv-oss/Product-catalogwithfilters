import React, { useState } from "react";

const products = [
  { id: 1, name: "Classic White Shirt", category: "Clothing", price: 999, image: "https://via.placeholder.com/200x200?text=Shirt" },
  { id: 2, name: "Running Shoes", category: "Footwear", price: 2499, image: "https://via.placeholder.com/200x200?text=Shoes" },
  { id: 3, name: "Leather Wallet", category: "Accessories", price: 799, image: "https://via.placeholder.com/200x200?text=Wallet" },
  { id: 4, name: "Blue Jeans", category: "Clothing", price: 1499, image: "https://via.placeholder.com/200x200?text=Jeans" },
  { id: 5, name: "Smart Watch", category: "Electronics", price: 3499, image: "https://via.placeholder.com/200x200?text=Watch" },
  { id: 6, name: "Backpack", category: "Accessories", price: 1299, image: "https://via.placeholder.com/200x200?text=Backpack" }
];

export default function ProductCatalog() {
  const [category, setCategory] = useState("All");
  const [maxPrice, setMaxPrice] = useState(5000);
  const [search, setSearch] = useState("");

  const categories = ["All", ...new Set(products.map((p) => p.category))];

  const filtered = products.filter(
    (p) =>
      (category === "All" || p.category === category) &&
      p.price <= maxPrice &&
      p.name.toLowerCase().includes(search.toLowerCase())
  );

  return (
    <div className="min-h-screen bg-gray-50 p-6">
      <h1 className="text-3xl font-bold mb-6 text-center">üõçÔ∏è Product Catalog</h1>

      {/* Filters */}
      <div className="bg-white p-4 rounded-xl shadow-md flex flex-col sm:flex-row justify-between items-center gap-4 mb-6">
        <div>
          <label className="font-medium mr-2">Category:</label>
          <select
            value={category}
            onChange={(e) => setCategory(e.target.value)}
            className="border p-2 rounded-md"
          >
            {categories.map((cat) => (
              <option key={cat}>{cat}</option>
            ))}
          </select>
        </div>

        <div>
          <label className="font-medium mr-2">Max Price: ‚Çπ{maxPrice}</label>
          <input
            type="range"
            min="500"
            max="5000"
            step="100"
            value={maxPrice}
            onChange={(e) => setMaxPrice(Number(e.target.value))}
            className="cursor-pointer"
          />
        </div>

        <div>
          <input
            type="text"
            placeholder="Search products..."
            value={search}
            onChange={(e) => setSearch(e.target.value)}
            className="border p-2 rounded-md w-48"
          />
        </div>
      </div>

      {/* Product Grid */}
      {filtered.length > 0 ? (
        <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          {filtered.map((p) => (
            <div key={p.id} className="bg-white rounded-xl shadow hover:shadow-lg transition p-4">
              <img src={p.image} alt={p.name} className="rounded-lg mb-4 w-full h-48 object-cover" />
              <h2 className="font-semibold text-lg">{p.name}</h2>
              <p className="text-gray-600">{p.category}</p>
              <p className="text-blue-600 font-bold mt-2">‚Çπ{p.price}</p>
              <button className="mt-3 bg-blue-500 hover:bg-blue-600 text-white py-1 px-3 rounded-lg">
                Add to Cart
              </button>
            </div>
          ))}
        </div>
      ) : (
        <p className="text-center text-gray-500 mt-10">No products found üòï</p>
      )}
    </div>
  );
}
